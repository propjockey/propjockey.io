---
import "augmented-ui/augmented-ui.min.css"
import "css-media-vars/css-media-vars.css"
---

<style>
  div {
    display: grid;
    --gtcsm: var(--media-lte-sm) 1fr;
    grid-template-columns: var(--gtcsm, 1fr 1fr 1fr);
    --gapsm: var(--media-lte-md) 1.33rem;
    gap: var(--gapsm, 2rem);
    justify-items: center;
    padding: 3rem 0.25rem;
    filter: var(--flags-glow) drop-shadow(0 0 2rem hsl(var(--theme_2) / 0.125));
  }
  a {
    --hmd: var(--media-lte-md) 28rem;
    height: var(--hmd, 35rem);
    width: 100%;
    max-width: var(--media-lte-sm) 20rem;
    --aug-border: initial;
    --aug-border-all: 0.125rem;
    --aug-border-bg: hsl(var(--theme_2));
    --aug-clip-br1: initial;
    --aug-br1: 2.5rem;
    --aug-rect-b1: initial;
    --aug-b1-width: 0.25rem;
    --aug-b1-height: 13%;
    --aug-b-center: 50%;
  }
  a:hover,
  a:active,
  a:focus {
    --aug-clip-tl1: initial;
    --aug-tl-inset2: 5rem;
    --aug-tl1: 0.5rem;
    --aug-tl1-alt-join-out: initial;
    --aug-inlay: initial;
    --aug-inlay-all: 0px;
    --inlaybgcolor: hsl(var(--theme_2));
    --aug-inlay-bg: linear-gradient(
      to right,
      var(--inlaybgcolor) 0.625rem,
      transparent 0.5rem,
      transparent calc(100% - 1.5rem),
      var(--inlaybgcolor) calc(100% - 1.5rem)
    );
    --aug-inlay-opacity: 0.5;
    --aug-round-bl1: initial;
    --aug-bl1: 0.5rem;
  }
  a:active,
  a:focus {
    --inlaybgcolor: hsl(var(--theme_1));
    --aug-border-bg: hsl(var(--theme_1));
    filter: brightness(0.9);
  }
  .nav-icon {
    position: absolute;
    right: 1rem;
    top: 1rem;
    height: 2rem;
    filter: var(--flags-glow) drop-shadow(0 0 1rem hsl(var(--theme_0) / 0.75));
    display: flex;
    align-items: center;
  }
  .nav-icon > * {
    height: 100%;
    width: auto;
  }
  .exp {
    background: linear-gradient(
      hsl(var(--theme_mainBgColor) / 0.5),
      hsl(var(--theme_mainBgColor) / 0.5)
    ), linear-gradient(
      hsl(var(--theme_1) / 0.25),
      hsl(var(--theme_2) / 0.25)
    ), url(/assets/exp.png) center center / auto 100% no-repeat;
  }
  .npm {
    background: linear-gradient(
      hsl(var(--theme_mainBgColor) / 0.5),
      hsl(var(--theme_mainBgColor) / 0.5)
    ), linear-gradient(
      hsl(var(--theme_1) / 0.25),
      hsl(var(--theme_2) / 0.25)
    ), url(/assets/npm.png) center center / auto 100% no-repeat;
  }
  .abt {
    background: linear-gradient(
      hsl(var(--theme_mainBgColor) / 0.5),
      hsl(var(--theme_mainBgColor) / 0.5)
    ), linear-gradient(
      hsl(var(--theme_1) / 0.25),
      hsl(var(--theme_2) / 0.25)
    ), url(/assets/abt.png) center center / auto 100% no-repeat;
  }
  p {
    position: absolute;
    bottom: 22%;
    left: 0;
    right: 0;
    height: 4.25rem;
    --fsmd: var(--media-lte-md) 1.125rem;
    font-size: var(--fsmd, 1.5rem);
    background: hsl(var(--theme_mainBgColor) / 0.5);
    padding: 0.25rem 1rem;
    color: hsl(var(--theme_0));
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    white-space: nowrap;
    text-shadow: var(--flags-glow) 0 0 1rem hsl(var(--theme_0) / 0.75);
  }
</style>

